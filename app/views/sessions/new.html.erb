
<% provide(:title, "Login") %>

<div class="header_image">

    <div class="container">

    </div>
    <!-- /.container -->

</div>
<!-- /.banner -->

<div class="jumbotron text-center">
  <h1>Login</h1>
</div>

<div class="container text-center form-horizontal">
  <% if devise_error_messages! %>
    <div class="alert alert-danger">Wrong email or password.</div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: login_path) do |f| %>

  <div class="form-group">
    <div class="col-xs-10 col-sm-6 col-lg-4 col-xs-offset-1 col-sm-offset-3 col-lg-offset-4 text-left">
      <label for="session_email">Email</label>
      <%= f.text_field :email, {class: 'form-control', autofocus: true}  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-10 col-sm-6 col-lg-4 col-xs-offset-1 col-sm-offset-3 col-lg-offset-4 text-left">
      <label for="session_password">Password</label>
      <%= f.password_field :password, {class: 'form-control', autocomplete: "off"}  %>
    </div>
  </div>

  <input class="btn btn-success" type="submit" name="commit" value="Submit">
  <% end %>

  <br />
</div>
