<% provide(:title, "Login") %>

<div class="info_header">

    <div class="container">

    </div>
    <!-- /.container -->

</div>
<!-- /.banner -->

<div class="jumbotron text-center">
  <h1>Login</h1>
</div>


<div class="container text-center form-horizontal">
  <% if flash[:login] %>
    <div class="alert alert-danger"><%= flash[:login] %></div>
  <% end %>

  <%= form_tag '/login' do %>

  <div class="form-group">
    <div class="col-xs-10 col-sm-6 col-lg-4 col-xs-offset-1 col-sm-offset-3 col-lg-offset-4 text-left">
      <label for="session_email">Email</label>
      <%= text_field_tag :email, nil, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-10 col-sm-6 col-lg-4 col-xs-offset-1 col-sm-offset-3 col-lg-offset-4 text-left">
      <label for="session_password">Password</label>
      <%= password_field_tag :password, nil, class: 'form-control'  %>
    </div>
  </div>

  <input class="btn btn-success" type="submit" name="commit" value="Submit">
  <% end %>

  <br />
</div>
